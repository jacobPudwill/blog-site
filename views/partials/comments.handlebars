<div class="comments-section">
    <div class="comments-header">
        <h4>Comments</h4>
    </div>
    <div class="comments">
        {{#each post.comments as |comment|}}
        <div class="comment">
            <p>{{content}}</p>
            <p>&emsp;- {{user.username}}, {{format_date createdAt}}</p>
        </div>
        {{/each}}

        {{#if (newComment logged_in post.user.id user_id)}}
        <form id="new-comment">
            <div class="form-group">
                <label for="new-comment-content">Comment</label>
                <input class="form-input" type="text" id="new-comment-content">
            </div>
            <div class="form-group">
                <button class="btn btn-secondary" type="submit" id="submit-comment" data-id="{{post.id}}">Submit</button>
            </div>
        </form>

        <script src="../js/comment.js"></script>
        {{/if}}
    </div>
</div>