{{#each posts as |post|}}
<div class="post">
    <div class="display-flex justify-space-between align-center post-title">
        <h4>
            <a href="/post/{{id}}" class="post-link">{{title}}</a>
        </h4>
        <p>Posted by {{user.username}} on {{format_date createdAt}}</p>
    </div>
    <div class="post-content">
        {{content}}
    </div>
</div>
{{/each}}