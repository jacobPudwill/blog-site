    <h5>
        <a href="/dashboard/edit-post/{{id}}">{{title}}</a>
    </h5>
    <h5>
        {{format_date createdAt}}
    </h5>
</div>
{{/each}}

<a href="/dashboard/new-post" id="new-post-btn">+ New Post</a>
